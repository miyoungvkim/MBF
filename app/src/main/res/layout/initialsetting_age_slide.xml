<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cerulean_blue"
    android:gravity="center">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:scale_base_height="360"
        app:scale_base_width="640">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initial_setting_age_setting_title"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:scale_textsize="28"
            app:scale_left="62"
            app:scale_top="36"
            app:scale_width="516"
            app:scale_height="59" />

        <TextView
            android:id="@+id/txt_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initial_setting_age_setting_guide_text"
            android:textColor="@android:color/white"
            app:scale_textsize="17"
            app:scale_left="62"
            app:scale_top="75"
            app:scale_width="516"
            app:scale_height="59" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/setup_age_all"
            app:scale_left="30"
            app:scale_top="110.3"
            app:scale_width="580"
            app:scale_height="139.8" />

        <RadioGroup
            android:id="@+id/radioGroup_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:scale_height="26"
            app:scale_left="60"
            app:scale_top="254"
            app:scale_width="516">

            <RadioButton
                android:id="@+id/age_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:button="@drawable/radio_button_age"
                android:checked="true"
                android:onClick="didTapButton"
                android:text="  0-2세"
                android:textColor="@color/white"
                app:scale_textsize="15" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <RadioButton
                android:id="@+id/age_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:button="@drawable/radio_button_age"
                android:onClick="didTapButton"
                android:text="  3-5세"
                android:textColor="@color/white"
                app:scale_textsize="15" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <RadioButton
                android:id="@+id/age_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:button="@drawable/radio_button_age"
                android:onClick="didTapButton"
                android:text="  6-7세"
                android:textColor="@color/white"
                app:scale_textsize="15" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <RadioButton
                android:id="@+id/age_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:button="@drawable/radio_button_age"
                android:onClick="didTapButton"
                android:text="  전체"
                android:textColor="@color/white"
                app:scale_textsize="15" />
        </RadioGroup>

    <Button
        android:id="@+id/button_accept"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_age_accept"
        android:text="적용하기"
        android:textColor="@color/text_button_white_black"
        app:scale_textsize="20"
        app:scale_left="180"
        app:scale_top="300"
        app:scale_width="130"
        app:scale_height="40" />

    <Button
        android:id="@+id/button_skip"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_age"
        android:text="건너뛰기"
        android:textColor="@color/text_button_black_white"
        app:scale_textsize="20"
        app:scale_left="330"
        app:scale_top="300"
        app:scale_width="130"
        app:scale_height="40" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>