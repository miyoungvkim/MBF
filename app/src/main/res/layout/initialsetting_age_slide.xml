<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_screen">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_setting_age_setting_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/setting_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initial_setting_age_setting_guide_text" />

        <RadioGroup
            android:id="@+id/radioGroup_age"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/age_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:button="@drawable/radio_button_boy_selector"
                android:checked="true"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="didTapButton"
                android:padding="10dp"
                android:text="0-2세" />

            <RadioButton
                android:id="@+id/age_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:button="@drawable/radio_button_girl_selector"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="didTapButton"
                android:padding="10dp"
                android:text="3-5세" />

            <RadioButton
                android:id="@+id/age_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:button="@drawable/radio_button_girl_selector"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="didTapButton"
                android:padding="10dp"
                android:text="6-7세" />

            <RadioButton
                android:id="@+id/age_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:button="@drawable/radio_button_girl_selector"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="didTapButton"
                android:padding="10dp"
                android:text="전체" />

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>