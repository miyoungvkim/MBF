<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cerulean_blue">


    <LinearLayout
        android:id="@+id/par"
        android:layout_width="546dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="36.5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initial_setting_age_setting_title"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guideText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initial_setting_age_setting_guide_text"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_skip"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/hiddenCenter"
        android:layout_alignRight="@+id/hiddenCenter"
        android:background="@drawable/round_button_age"
        android:text="건너뛰기"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_accept"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/hiddenCenter"
        android:layout_alignLeft="@+id/hiddenCenter"
        android:background="@drawable/round_button_age"
        android:text="적용하기"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/hiddenCenter"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/par"
        android:layout_centerHorizontal="true"
        android:background="@color/cerulean_blue" />

    <RadioGroup
        android:id="@+id/radioGroup_age"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_above="@+id/hiddenCenter"
        android:layout_alignLeft="@+id/par"
        android:layout_alignRight="@+id/par"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/age_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:button="@drawable/radio_button_age"
            android:checked="true"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="didTapButton"
            android:textColor="@color/white"
            android:text="0-2세" />

        <RadioButton
            android:id="@+id/age_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:button="@drawable/radio_button_age"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="didTapButton"
            android:textColor="@color/white"
            android:text="3-5세" />

        <RadioButton
            android:id="@+id/age_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:button="@drawable/radio_button_age"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="didTapButton"
            android:textColor="@color/white"
            android:text="6-7세" />

        <RadioButton
            android:id="@+id/age_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:button="@drawable/radio_button_age"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="didTapButton"
            android:textColor="@color/white"
            android:text="전체" />

    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup_age"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginEnd="64dp"
        app:srcCompat="@drawable/setup_age_bird" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup_age"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_marginEnd="42.1dp"
        app:srcCompat="@drawable/setup_age_cat" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup_age"
        android:layout_alignEnd="@+id/par"
        app:srcCompat="@drawable/setup_age_girl" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup_age"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_marginEnd="29.3dp"
        app:srcCompat="@drawable/setup_age_pelican" />


</RelativeLayout>