<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gold">


    <LinearLayout
        android:id="@+id/par"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="36.5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_initial_setting_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_setting_name_title"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/title_margen"
            android:layout_width="280dp"
            android:layout_height="8dp"
            android:layout_alignBottom="@+id/par"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/img_initial_setting_name_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_setting_name_guide"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_initial_setting_name_icon"
            android:layout_width="104dp"
            android:layout_height="122.7dp"
            android:layout_marginTop="13.5dp"
            app:srcCompat="@drawable/setup_name_girl" />


        <EditText
            android:id="@+id/edittxt_initial_setting_name_baby_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="이름을 입력해주세요"
            android:paddingBottom="10dp"
            android:orientation="horizontal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/hiddenCenter"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/par"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:background="@color/light_gold" />

    <Button
        android:id="@+id/button_skip"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/hiddenCenter"
        android:layout_alignBottom="@+id/hiddenCenter"
        android:background="@drawable/round_button_name"
        android:text="건너뛰기"
        android:textColor="@color/text_button_black_white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_accept"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/hiddenCenter"
        android:layout_alignBottom="@+id/hiddenCenter"
        android:background="@drawable/round_button_name_accept"
        android:text="적용하기"
        android:textColor="@color/text_button_white_black"
        android:textSize="20sp" />

</RelativeLayout>