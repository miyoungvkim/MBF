<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_screen">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_initial_setting_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_setting_name_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/setting_title"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_initial_setting_name_icon"
            android:layout_width="128dp"
            android:layout_height="87dp"
            app:srcCompat="@drawable/initial_setting_baby_icon" />

        <TextView
            android:id="@+id/img_initial_setting_name_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_setting_name_guide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_initial_setting_name_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/nickname" />

            <EditText
                android:id="@+id/edittxt_initial_setting_name_baby_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex) 민지" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>