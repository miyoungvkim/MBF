<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/strawberry"
    android:gravity="center">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:scale_base_height="360"
        app:scale_base_width="640">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initial_setting_parent_title"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:scale_textsize="28"
            app:scale_left="43.5"
            app:scale_top="36"
            app:scale_width="553"
            app:scale_height="100" />

        <TextView
            android:id="@+id/txt_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initial_setting_parents_guide_text"
            android:textColor="@android:color/white"
            app:scale_textsize="17"
            app:scale_left="43.5"
            app:scale_top="75.5"
            app:scale_width="553"
            app:scale_height="100" />

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/setup_parent"
            android:clickable="false"
            app:scale_left="172"
            app:scale_top="134.1"
            app:scale_width="353.9"
            app:scale_height="192.9" />

        <Button
            android:id="@+id/button_start"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button_start"
            android:text="@string/initial_setting_start"
            android:textColor="@color/black"
            app:scale_textsize="20"
            app:scale_left="200"
            app:scale_top="300"
            app:scale_width="240"
            app:scale_height="40" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>