<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EpisodeCharacterActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gold"
        app:layout_anchorGravity="right|top">

        <ImageButton
            android:id="@+id/btn_Back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/oval_button2"
            android:src="@drawable/ic_back" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_pororo" />

        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_Back"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/recycler_view"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/thumbnail_pororo"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/btn_Back"
            android:layout_toRightOf="@+id/characterImage"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:clipToPadding="false" />

        <TextView
            android:id="@+id/txt_character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뽀로로"
            android:layout_centerInParent="true"
            android:layout_alignTop="@+id/btn_Back"
            android:layout_alignBottom="@+id/btn_Back"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/oval_button2"
            android:src="@drawable/shape" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>